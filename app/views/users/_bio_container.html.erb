<div class="bio-container">
  <% if @user.profile_image.attached? %>
    <%= cl_image_tag @user.profile_image.key,  height: 300, width: 400 %>
  <% else %>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", alt: "avatar-large" %>
  <% end %>
  <div class="bio-text-and-instrument">
    <div class="bio-text">
      <ul class="list-unstyled">
      <li>
        <%= @user.full_name %>     
      </li>
      <li>
        <%= @user.email %>
      </li>
      <li>
        <%= @user.phone_number %>
      </li>
      </ul>
    </div>
    <div class="bio-instruments">
    <h4><b>Instruments I play</b></h4>
      <ul class="list-unstyled">
      <li>
        <% @user.user_instruments.each do |instrument| %>
        <h1>Instrument&nbsp;&nbsp;&nbsp;&nbsp;   Level</h1>
          <p>:: <%= Instrument.find(instrument.instrument_id).instrument_type %> <span class="stars">2.6545344</span>  &nbsp; &nbsp; <%= instrument.skill_level %></p>        
          <% end %>
      </ul>
    </div>
  </div>
</div>
<div class="bio-container">
  <% if @user.profile_image.attached? %>
    <%= cl_image_tag @user.profile_image.key,  height: 300, width: 400 %>
  <% else %>
    <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", alt: "avatar-large" %>
  <% end %>
  <div class="bio-text-and-instrument">
    <div class="bio-text">
      <ul class="list-unstyled">
      <h4><b>My info </b></h4>  
      <i class="fas fa-info"></i> 
      <li>
        <%= @user.full_name %>     
      </li>
      <li>
        <%= @user.email %>
      </li>
      <li>
        <%= @user.phone_number %>
      </li>
      </ul>
    </div>
    <div class="bio-instruments">
    <h4><b>Instruments I play</b></h4>
      <ul class="list-unstyled">
      <li>
        <% @user.user_instruments.each do |instrument| %>

          <p>:: <%= Instrument.find(instrument.instrument_id).instrument_type %></p>
          <% instrument.skill_level.times do |num| %>
          <i class="fas fa-star"></i>
          <% end %>
          <% (5 - instrument.skill_level).times do |num| %>
          <i class="far fa-star"></i>
          <% end %>     
          <% end %>
          <br>
          <br>
          <h6><%= link_to  "Add an instrument", edit_user_registration_path %></h6>
      </ul>
    </div>
  </div>
</div>